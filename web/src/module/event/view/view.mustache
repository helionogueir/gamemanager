<div class="container-fluid">
    <h2 class="display-4">{{ event.name }}</h2>
    <p class="lead">{{ event.description }}.</p>
</div>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            {{# groups }}
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5><strong>{{ name }}</strong></h5>
                        <ul class="list-group list-group-flush">
                            {{# members }}
                            <li class="list-group-item">{{ . }}</li>
                            {{/ members }}
                        </ul>
                        <br>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="javascript:Dashboard.open('/event/view/{{ eventid }}');" class="btn btn-sm btn-outline-secondary">{{# lang }}group:matches,event{{/ lang }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/ groups }}
        </div>
    </div>
    {{^ groups }}
    <p class="text-center">{{# lang }}groups:notfound,event{{/ lang }}</p>
    {{/ groups }}
</div>